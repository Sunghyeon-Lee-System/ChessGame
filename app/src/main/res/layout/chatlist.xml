<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/yourMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/yourchatbox"
        android:text="message"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/yourMessage"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/yourMessage"
        android:text="name" />

    <TextView
        android:id="@+id/yourTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/yourMessage"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/yourMessage"
        android:text="time" />

    <TextView
        android:id="@+id/myMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/mychatbox"
        android:text="message"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/myTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/myMessage"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@id/myMessage"
        android:text="time" />
</RelativeLayout>